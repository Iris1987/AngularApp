
@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col s1 m1 l3">
    </div>
    <div class="col s10 m10 l6">
        <div class="card">
            <div class="card-content">
                <form asp-action="Login" asp-controller="Login" asp-anti-forgery="true">
                    <h6><span class="grey-text text-darken-3"><b>Sign in</b></span></h6>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="username" name="username" type="text" class="validate">
                            <label for="username">Login</label>
                        </div>

                        <div class="input-field col s12">
                            <input id="password" name="password" type="password" class="validate">
                            <label for="password">Password</label>
                        </div>

                        <div class="input-field col s6"></div>
                        <div class="input-field col s6 "><button class="btn waves-effect waves-light right light-blue  " type="submit" name="action">Log in</button></div>
                    </div>
                </form>
        </div>
    </div>
    <div class="col s1 m1 l3"></div>
</div>
</div>